@model IEnumerable<SchoolManagment.UI.Areas.Admin.ViewModels.StudentViewModel>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@{
    ViewData["Title"] = "Students";
}



<div class="card shadow-sm mt-4">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <a asp-action="Create" class="btn btn-success btn-sm">
            <i class="bi bi-plus-circle"></i> Add New Student
        </a>
    </div>

    <div class="card-body">
        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info text-center mb-0">
                No students found.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Roll No</th>
                            <th>Full Name</th>
                            <th>Class</th>
                            <th>Section</th>
                            <th>Gender</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in Model)
                        {
                            <tr>
                                <td>@student.RollNumber</td>
                                <td>@student.FullName</td>
                                <td>@student.ClassName</td> 
                                <td>@student.SectionName</td> 
                                <td>@student.Gender</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-sm btn-warning">Edit</a>
                                    <a asp-action="Details" asp-route-id="@student.Id" class="btn btn-sm btn-info">Details</a>
                                    <a asp-action="Delete" asp-route-id="@student.Id" class="btn btn-sm btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
