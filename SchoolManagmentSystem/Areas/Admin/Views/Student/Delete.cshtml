@model SchoolManagment.UI.Areas.Admin.ViewModels.StudentViewModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Delete Student";
}

<h2>Delete Student</h2>

<h4>Are you sure you want to delete this student?</h4>

<div class="border p-3 rounded mt-3">
    <div class="form-group">
        <label>Roll Number:</label>
        <span>@Model.RollNumber</span>
    </div>

    <div class="form-group">
        <label>Full Name:</label>
        <span>@Model.FullName</span>
    </div>

    <div class="form-group">
        <label>Class:</label>
        <span>@Model.ClassName</span>
    </div>

    <div class="form-group">
        <label>Section:</label>
        <span>@Model.SectionName</span>
    </div>
</div>

@using (Html.BeginForm("Delete", "Student", new { area = "Admin", id = Model.Id }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <button type="submit" class="btn btn-danger mt-3">Delete</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
}
